{
  "name": "context-copy-file-contents",
  "displayName": "Context Copy File Contents",
  "description": "Right click a folder and copy all ts and js file contents into clipboard",
  "version": "0.0.1",
  "repository": {
    "url": "https://github.com/igorjorgensen/vsc-context-copy-file-contents"
  },
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.copyFolderContent",
        "title": "Copy content to clipboard"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.copyFolderContent",
          "when": "resourceLangId == typescript || resourceLangId == javascript",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "copy-content": "ts-node ./tools/copy-content.ts ./src",
    "pack": "npm install && npm run compile && vsce package --out .extensions"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/semver": "^7.5.8",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "semver": "^7.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
